# Vercel Deployment Environment Variables
# Add these in your Vercel project settings

# API Configuration
VITE_API_BASE_URL=https://your-app.vercel.app/api
VITE_PRODUCTION_URL=https://your-app.vercel.app

# Development Configuration
VITE_DEV_SERVER_PORT=8080
VITE_BACKEND_SERVER_PORT=3001
VITE_DEBUG_MODE=false
VITE_SHOW_DEBUG_INFO=false

# Email Configuration
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password

# Payment Gateway Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
VITE_RAZORPAY_KEY_ID=your_razorpay_key_id

# EZSite Configuration
VITE_EZSITE_API_URL=your_ezsite_api_url
VITE_EZSITE_API_KEY=your_ezsite_api_key
VITE_EZSITE_PROJECT_ID=your_ezsite_project_id

# Feature Flags
VITE_ENABLE_BLOG=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_PAYMENT_GATEWAY=true
VITE_ENABLE_MULTI_LANGUAGE=true
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=true 