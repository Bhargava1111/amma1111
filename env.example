# =============================================================================
# EMAIL SERVICE CONFIGURATION
# =============================================================================
VITE_EMAIL_SERVICE_URL=https://your-email-service.com/api
VITE_EMAIL_API_KEY=your_email_api_key_here

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Email Templates
VITE_EMAIL_FROM_NAME=MANAfoods
VITE_EMAIL_FROM_ADDRESS=noreply@manafoods.com
VITE_EMAIL_SUPPORT_ADDRESS=support@manafoods.com

# =============================================================================
# PAYMENT GATEWAY CONFIGURATION
# =============================================================================
# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
VITE_STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal Configuration
VITE_PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# Razorpay Configuration (if using)
VITE_RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =============================================================================
# THIRD-PARTY API KEYS
# =============================================================================
# Google Services
VITE_GOOGLE_MAPS_API_KEY=your_google_maps_api_key
VITE_GOOGLE_ANALYTICS_ID=GA-XXXXX-X
VITE_GOOGLE_TAG_MANAGER_ID=GTM-XXXXXXX
VITE_GOOGLE_CLIENT_ID=your_google_oauth_client_id
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# Firebase (if using)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789
VITE_FIREBASE_APP_ID=1:123456789:web:abcdef

# WhatsApp Business API
VITE_WHATSAPP_BUSINESS_API_URL=https://graph.facebook.com/v18.0
VITE_WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
VITE_WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id

# =============================================================================
# PUSH NOTIFICATION SERVICES
# =============================================================================
# Firebase Cloud Messaging
VITE_FCM_VAPID_KEY=your_fcm_vapid_key
FCM_SERVER_KEY=your_fcm_server_key

# OneSignal (alternative)
VITE_ONESIGNAL_APP_ID=your_onesignal_app_id
ONESIGNAL_REST_API_KEY=your_onesignal_rest_api_key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_make_it_long_and_random
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Keys
ENCRYPTION_KEY=your_32_character_encryption_key_here
HASH_SALT_ROUNDS=12

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# DATABASE CONFIGURATION (if using additional databases)
# =============================================================================
# MongoDB (if using)
MONGODB_URI=mongodb://localhost:27017/manafoods
MONGODB_DB_NAME=manafoods

# Redis (for caching/sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# CLOUD STORAGE CONFIGURATION
# =============================================================================
# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Cloudinary (for image uploads)
VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# =============================================================================
# ANALYTICS AND MONITORING
# =============================================================================
# Sentry (Error Tracking)
VITE_SENTRY_DSN=your_sentry_dsn_here

# Mixpanel (Analytics)
VITE_MIXPANEL_TOKEN=your_mixpanel_token

# Hotjar (User Behavior)
VITE_HOTJAR_ID=your_hotjar_id

# =============================================================================
# SOCIAL MEDIA INTEGRATION
# =============================================================================
# Facebook
VITE_FACEBOOK_APP_ID=your_facebook_app_id
VITE_FACEBOOK_PIXEL_ID=your_facebook_pixel_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Twitter
VITE_TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Instagram
VITE_INSTAGRAM_CLIENT_ID=your_instagram_client_id
INSTAGRAM_CLIENT_SECRET=your_instagram_client_secret

# =============================================================================
# SHIPPING AND LOGISTICS
# =============================================================================
# Shipment Tracking APIs
VITE_SHIPPING_API_KEY=your_shipping_api_key
VITE_TRACKING_API_URL=https://api.trackingservice.com

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
# Development Server
VITE_DEV_SERVER_PORT=8080
VITE_BACKEND_SERVER_PORT=3001

# Debug Settings
DEBUG=true
VITE_DEBUG_MODE=true
VITE_SHOW_DEBUG_INFO=true

# =============================================================================
# PRODUCTION CONFIGURATION
# =============================================================================
# Domain Settings
VITE_PRODUCTION_URL=https://manafoods.com
VITE_API_BASE_URL=https://api.manafoods.com

# SSL Configuration
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/key.pem

# =============================================================================
# BACKUP AND MAINTENANCE
# =============================================================================
# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/backups

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE=We're currently performing maintenance. Please check back soon.

# =============================================================================
# FEATURE FLAGS
# =============================================================================
VITE_ENABLE_BLOG=true
VITE_ENABLE_WISHLIST=true
VITE_ENABLE_REVIEWS=true
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_CHAT_SUPPORT=true
VITE_ENABLE_SOCIAL_LOGIN=true
VITE_ENABLE_PAYMENT_GATEWAY=true
VITE_ENABLE_MULTI_LANGUAGE=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_PWA=true 